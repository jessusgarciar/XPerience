<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clipToPadding="false"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="30dp"> <!-- Ajuste para evitar la barra de estado -->

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explorar Rutas"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descubre nuevas aventuras en Aguascalientes"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <!-- Tarjeta de Búsqueda (Visual) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_button_bg"
            android:padding="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/icon_search_bg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/white_circle_bg"
                android:src="@drawable/ic_search_purple"
                app:tint="#8E44AD"
                android:padding="12dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icon_search_bg"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Busca un destino"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Filtros de Categoría -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/filter_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todos"
                    android:background="@drawable/filter_chip_selected"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/filter_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gastronómico"
                    android:background="@drawable/filter_chip_unselected"
                    android:textColor="#8E44AD"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/filter_culture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cultural"
                    android:background="@drawable/filter_chip_unselected"
                    android:textColor="#8E44AD"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/filter_nature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Naturaleza"
                    android:background="@drawable/filter_chip_unselected"
                    android:textColor="#8E44AD"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Contenedor Dinámico de Lugares -->
        <LinearLayout
            android:id="@+id/explore_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>