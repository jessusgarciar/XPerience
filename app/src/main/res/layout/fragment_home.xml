<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="48dp">

        <!-- Cabecera Puntos -->
        <RelativeLayout
            android:id="@+id/header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_card_bg"
            android:padding="16dp">

            <!-- LOGO DE LA APP -->
            <ImageView
                android:id="@+id/header_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo_selector"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>

            <!-- Contenedor para los textos, posicionado a la derecha del logo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/header_logo"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tus puntos"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/text_home_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_debug_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_add"
                app:tint="@color/white_fixed"
                android:background="@drawable/purple_button_bg"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Añadir puntos"/>
        </RelativeLayout>


        <!-- Estadísticas Rápidas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/white_card_bg"
                android:padding="16dp"
                android:gravity="center_horizontal"
                android:layout_marginEnd="4dp">
                <TextView
                    android:id="@+id/text_stat_visited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lugares"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/white_card_bg"
                android:padding="16dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="4dp">
                <TextView
                    android:id="@+id/text_stat_missions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Misiones"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Título de Sección y Botón Ver Mapa -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugares cercanos"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/btn_view_all_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver mapa"
                android:textColor="@color/purple_brand"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_map"
                app:drawableTint="@color/purple_brand"
                android:drawablePadding="4dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Contenedor Dinámico -->
        <LinearLayout
            android:id="@+id/places_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>