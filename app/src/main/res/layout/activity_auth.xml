<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_start"
    tools:context=".AuthActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <!-- LOGO (IMAGEN PNG) -->
        <!--
             1. src: Cambia @drawable/ic_app_logo por el nombre de tu archivo (ej. @drawable/logo_xperience)
             2. app:tint: LO QUITAMOS. Si usas una imagen a color, no quieres que Android la pinte de blanco.
             3. background: Lo quitamos si tu logo ya tiene fondo o si quieres que sea transparente.
        -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_selector"
            android:contentDescription="Logo XPerience" />

        <!-- Título -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XPerience"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/purple_light_brand"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.05"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convierte tus salidas en aventuras"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"/>

        <!-- Tabs -->
        <LinearLayout
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/white_card_bg"
            android:padding="4dp">

            <TextView
                android:id="@+id/tab_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Iniciar Sesión"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/text_secondary"
                android:background="@android:color/transparent"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tab_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Registrarse"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/white_fixed"
                android:background="@drawable/tab_selected_bg"
                android:textStyle="bold"/>
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos guardados localmente en tu navegador"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:textColor="@color/text_secondary"/>

</RelativeLayout>