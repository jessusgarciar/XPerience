<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_error_circle"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/dialog_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Ups!"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/dialog_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algo salió mal."
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_dialog_error_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entendido"
        android:background="@drawable/gradient_button_bg"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:backgroundTint="@null"/> <!-- Importante para mantener el gradiente -->

</LinearLayout>