<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="48dp">

        <!-- Cabecera de Perfil -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_button_bg"
            android:padding="20dp">

            <!-- FOTO DE PERFIL INTERACTIVA -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp"
                card_view:cardCornerRadius="40dp"
                card_view:cardElevation="0dp"
                card_view:cardBackgroundColor="@color/white_fixed">

                <ImageView
                    android:id="@+id/img_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    app:tint="#CCCCCC"/>

                <!-- Overlay oscuro para el icono de cámara -->
                <View
                    android:id="@+id/view_profile_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40000000"/>

                <!-- Icono de cámara pequeño -->
                <ImageView
                    android:id="@+id/img_camera_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_camera_edit"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/card_profile_pic"
                android:text="Explorador"
                android:textColor="@color/white_fixed"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/profile_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/card_profile_pic"
                android:layout_below="@id/profile_name"
                android:text="Aguascalientes, MX"
                android:textColor="@color/white_fixed"
                android:alpha="0.8"
                android:drawableLeft="@drawable/ic_location_pin"
                app:drawableTint="@color/white_fixed"
                android:drawablePadding="4dp"/>

            <TextView
                android:id="@+id/profile_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/card_profile_pic"
                android:layout_below="@id/profile_location"
                android:text="Nivel 1"
                android:background="@drawable/white_card_bg"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="10sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="4dp"/>

            <!-- Barra de Progreso de Nivel -->
            <ProgressBar
                android:id="@+id/level_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_below="@id/card_profile_pic"
                android:layout_marginTop="16dp"
                android:progress="0"
                android:max="1000"
                android:progressDrawable="@drawable/progress_bar_custom_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_progress"
                android:layout_marginTop="4dp"
                android:text="Progreso al sig. nivel"
                android:textColor="@color/white_fixed"
                android:alpha="0.8"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/text_points_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_progress"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:text="0 pts"
                android:textColor="@color/white_fixed"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </RelativeLayout>

        <!-- Estadísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Tarjeta Puntos Totales -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/white_card_bg"
                android:padding="16dp"
                android:gravity="center_horizontal"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star_points"
                    app:tint="@color/purple_brand"/>
                <TextView
                    android:id="@+id/text_stat_total_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puntos totales"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Sección Progreso Detallado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu Progreso"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_card_bg"
            android:layout_marginTop="16dp"
            android:padding="16dp">

            <!-- Progreso Lugares Visitados -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_p1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_route_stops"
                    app:tint="@color/purple_brand"
                    android:layout_marginEnd="12dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon_p1"
                    android:text="Lugares visitados"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_places_visited_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/50"
                    android:textColor="@color/text_secondary"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/progress_places"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:progress="0"
                android:max="50"
                android:progressDrawable="@drawable/progress_bar_custom"/>
        </LinearLayout>

        <!-- Sección Historial de Visitas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de Visitas"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <!-- Contenedor Dinámico para el Historial -->
        <LinearLayout
            android:id="@+id/history_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>