<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/white_card_bg"
    android:layout_marginBottom="12dp"
    android:padding="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_reward_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_mission_foodie"
        android:background="@drawable/badge_icon_bg"
        android:padding="10dp"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_reward_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recompensa"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_reward_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 pts"
            android:textColor="#8E44AD"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_redeem"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Canjear"
        android:textSize="12sp"
        android:background="@drawable/gradient_button_bg"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</LinearLayout>