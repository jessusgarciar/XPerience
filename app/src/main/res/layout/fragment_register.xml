<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:background="@drawable/white_card_bg"
    android:padding="24dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_register"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_create_account"
            app:tint="@color/purple_brand"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/text_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear cuenta"
            android:layout_toEndOf="@id/icon_register"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"/>
        <TextView
            android:id="@+id/text_join_adventure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Únete y comienza tu aventura"
            android:layout_below="@id/text_create_account"
            android:layout_toEndOf="@id/icon_register"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_secondary"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/label_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de usuario"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej: aventurero123"
        android:textColorHint="@color/text_hint"
        android:textColor="@color/text_input"
        android:inputType="textPersonName"
        android:background="@drawable/bg_input"
        android:padding="12dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/label_email_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="tu@email.com"
        android:textColorHint="@color/text_hint"
        android:textColor="@color/text_input"
        android:inputType="textEmailAddress"
        android:background="@drawable/bg_input"
        android:padding="12dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/label_password_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mínimo 6 caracteres"
        android:textColorHint="@color/text_hint"
        android:textColor="@color/text_input"
        android:inputType="textPassword"
        android:background="@drawable/bg_input"
        android:padding="12dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/label_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar contraseña"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repite tu contraseña"
        android:textColorHint="@color/text_hint"
        android:textColor="@color/text_input"
        android:inputType="textPassword"
        android:background="@drawable/bg_input"
        android:padding="12dp"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:background="@drawable/gradient_button_bg"
        android:textColor="@color/white_fixed"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:padding="14dp"
        app:backgroundTint="@null"/>

</LinearLayout>